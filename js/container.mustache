<div class="dialogue-container js-dialogue-container {{#className}}{{className}}-container{{/className}}">
    <div class="dialogue js-dialogue {{#className}}{{className}}-dialogue{{/className}}">

{{#draggable}}

        <div class="dialogue-draggable-handle js-dialogue-draggable-handle"></div>
    
{{/draggable}}
{{^hideClose}}

        <span class="dialogue-close js-dialogue-close">&times;</span>

{{/hideClose}}
{{#title}}

        <h6 class="dialogue-title js-dialogue-title">{{title}}</h6>

{{/title}}
{{#description}}

        <p class="dialogue-description">{{description}}</p>

{{/description}}

        <div class="dialogue-html js-dialogue-html">{{{html}}}</div>

{{#actionStyleNew}}
    {{#actions.length}}

        <div class="dialogue-actions">

        {{#actions}}

            <button class="{{#classes}}{{.}} {{/classes}}dialogue-action js-dialogue-action" data-name="{{name}}">{{name}}</button>

        {{/actions}}

        </div>

    {{/actions.length}}
{{/actionStyleNew}}
{{^actionStyleNew}}
    {{#actionNames.length}}

        <div class="dialogue-actions">

        {{#actionNames}}

            <button class="button primary dialogue-action js-dialogue-action" data-name="{{.}}">{{.}}</button>

        {{/actionNames}}

        </div>

    {{/actionNames.length}}
{{/actionStyleNew}}

    </div>

{{#mask}}

    <div class="dialogue-mask js-dialogue-mask {{#className}}{{className}}-mask{{/className}}"></div>

{{/mask}}
    
</div>
